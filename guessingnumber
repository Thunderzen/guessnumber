import random
from timeit import default_timer
#An alternative play is playing against time
start_time=default_timer()

#Customisable number answers. Alternate code is random.randrange(a,b+1)
answer= random.randint(0,10)
#max number of tries for player
limit=3
attempt=0
not_won=True
print('Welcome to guessing game! You have 3 Tries to guess the correct number.')
#Game ends when either player has exceeded the guess limit or won the game
while attempt<limit and not_won:

    guess=int(input("Guess a number from 0-10 inclusive:"))
    if isinstance(guess,int):
        attempt+=1
        if guess==answer:
            print("Congratulations, you have guessed correctly! The answer is %d"%answer)
            not_won=False
        else:
            #Gives player a hint on whether their guess is higher or lower than the answer. 
            #To increase difficulty, this "if" clause can be removed. ie.removing the hint
            if guess>answer:
                Hint="Your guess is higher than the answer. Guess a lower number"
            else:
                Hint="Your guess is lower than the answer. Guess a higher number"
            print("Incorrect guess,{}".format(Hint))
            print("You have {} tries remaining".format(limit-attempt))

    else:
        print("Your guess needs to be an integer")

end_time=default_timer()
duration=end_time-start_time

if attempt==limit and not_won==True:
    print("You have lost the game")
    print("The answer was:",answer)
else:
    print("Your time taken was:",duration)
